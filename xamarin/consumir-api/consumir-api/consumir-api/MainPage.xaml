             x:Class="consumir_api.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bienvenido a la aplicacion para consumir una API!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="comienza llenando el input" FontSize="Title" Padding="30,10,30,10" x:Name="LabelUno"/>

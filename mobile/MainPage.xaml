<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            
            <Label
                Text="consume la Api Concatenar"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" 
                x:Name="LabelOne"
                />
            

            <Entry
                Placeholder="Añade un texto"
                x:Name="ConcatenarText"
                />

            <Button
                x:Name="ConsumirApiBtn"
                Text="Click"
                HorizontalOptions="Center"
                Clicked="ConsumirApiBtn_Clicked"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
